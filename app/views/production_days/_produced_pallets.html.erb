<% if @production_days.any? %>
    <table class="table table-striped table-hover mb-0 text-center">
        <thead>
            <tr>
                <th scope="col" class="align-middle">Date</th>
                <th scope="col" class="align-middle">Stopped Pallets</th>
                <th scope="col" class="align-middle">Approved Pallets</th>
                <th scope="col" class="align-middle text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @production_days.each do |production_day| %>
                <tr style="cursor:pointer;">
                    <td class="align-middle"><%= production_day.date %></td>
                    <td class="align-middle"><%= production_day.stopped_pallets_count %></td>
                    <td class="align-middle"><%= production_day.approved_pallets_count %></td>
                    <td class="align-middle">
                        <div class="btn-group d-flex" role="group" aria-label="Actions">
                            <%= link_to edit_production_day_path(production_day), class: "btn btn-primary btn-sm rounded-pill me-2" do %>
                                <i class="bi bi-pencil-square"></i>
                            <% end %>
                            <%= link_to production_day_path(production_day), class: "btn btn-primary btn-sm rounded-pill" do %>
                                <i class="bi bi-eye-fill"></i>
                            <% end %>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
        <% unless @production_days.any? %>
            <tfoot>
                <tr>
                    <td colspan="4">
                        <div class="alert alert-warning mb-0 text-center" role="alert">
                            No production days found.
                        </div>
                    </td>
                </tr>
            </tfoot>
        <% end %>
    </table>
<% else %>
    <div class="alert alert-warning mb-0 text-center" role="alert">
        No production days found.
    </div>
<% end %>