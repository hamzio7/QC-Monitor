<% if @line_stops.any? %>
    <table class="table table-striped table-hover mb-0 text-center">
        <thead>
            <tr>
                <th scope="col" class="align-middle">Date:</th>
                <th scope="col" class="align-middle">Shift:</th>
                <th scope="col" class="align-middle">Line:</th>
                <th scope="col" class="align-middle">Stopped At:</th>
                <th scope="col" class="align-middle">Started At:</th>
                <th scope="col" class="align-middle">Reason:</th>
            </tr>
        </thead>
        <tbody>
            <% @line_stops.each do |index| %>
                <tr style="cursor:pointer;">
                    <td class="align-middle"><%= index.date %></td>
                    <td class="align-middle"><%= index.shift %></td>
                    <td class="align-middle"><%= index.line_number %></td>
                    <td class="align-middle"><%= index.time_stopped %></td>
                    <td class="align-middle"><%= index.time_restarted %></td>
                    <td class="align-middle">
                        <div class="btn-group d-flex" role="group" aria-label="Actions">
                            <%= link_to edit_line_stop_path(index), class: "btn btn-primary btn-sm rounded-pill me-2" do %>
                                <i class="bi bi-pencil-square"></i>
                            <% end %>
                            <%= link_to line_stop_path(index), class: "btn btn-primary btn-sm rounded-pill" do %>
                                <i class="bi bi-eye-fill"></i>
                            <% end %>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
        <% unless @line_stops.any? %>
            <tfoot>
                <tr>
                    <td colspan="4">
                        <div class="alert alert-warning mb-0 text-center" role="alert">
                            No Line Stops.
                        </div>
                    </td>
                </tr>
            </tfoot>
        <% end %>
    </table>
<% else %>
    <div class="alert alert-warning mb-0 text-center" role="alert">
        No Line Stops.
    </div>
<% end %>