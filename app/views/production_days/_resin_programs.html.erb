<% if @resin_programs.any? %>
    <table class="table table-striped table-hover mb-0 text-center">
        <thead>
            <tr>
                <th scope="col" class="align-middle">Date</th>
                <th scope="col" class="align-middle">Shift</th>
                <th scope="col" class="align-middle">Line</th>
                <th scope="col" class="align-middle">WLF</th>
                <th scope="col" class="align-middle">837</th>
                <th scope="col" class="align-middle">1448</th>
                <th scope="col" class="align-middle">ES-700</th>
                <th scope="col" class="align-middle">ES-501</th>
                <th scope="col" class="align-middle">1010</th>
                <th scope="col" class="align-middle">837</th>
                <th scope="col" class="align-middle">1014</th>
                <th scope="col" class="align-middle">UF Tank</th>
                <th scope="col" class="align-middle">MF Tank</th>
                <th scope="col" class="align-middle">Tank 1 Mix</th>
                <th scope="col" class="align-middle">Tank 2 Mix</th>

                <th scope="col" class="align-middle text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @resin_programs.each do |resin| %>
                <tr style="cursor:pointer;" >
                    <td class="align-middle"><%= resin.date %></td>
                    <td class="align-middle"><%= resin.shift %></td>
                    <td class="align-middle"><%= resin.line %></td>
                    <td class="align-middle"><%= resin.uf_wlf %></td>
                    <td class="align-middle"><%= resin.uf_837 %></td>
                    <td class="align-middle"><%= resin.uf_1448 %></td>
                    <td class="align-middle"><%= resin.mf_es700 %></td>
                    <td class="align-middle"><%= resin.mf_es501 %></td>
                    <td class="align-middle"><%= resin.mf_1010 %></td>
                    <td class="align-middle"><%= resin.mf_837 %></td>
                    <td class="align-middle"><%= resin.mf_1014 %></td>
                    <td class="align-middle"><%= resin.uf_tank_num %></td>
                    <td class="align-middle"><%= resin.mf_tank_num %></td>
                    <td class="align-middle"><%= resin.mixing_1 %></td>
                    <td class="align-middle"><%= resin.mixing_2 %></td>

                    <td class="align-middle">
                        <div class="btn-group d-flex" role="group" aria-label="Actions">
                            <%= link_to edit_resin_program_path(resin), class: "btn btn-primary btn-sm rounded-pill me-2" do %>
                                <i class="bi bi-pencil-square"></i>
                            <% end %>
                            <%= link_to resin_program_path(resin), class: "btn btn-primary btn-sm rounded-pill" do %>
                                <i class="bi bi-eye-fill"></i>
                            <% end %>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
        <% unless @resin_programs.any? %>
            <tfoot>
                <tr>
                    <td colspan="4">
                        <div class="alert alert-warning mb-0 text-center" role="alert">
                            No Resin Program Found.
                        </div>
                    </td>
                </tr>
            </tfoot>
        <% end %>
    </table>
<% else %>
    <div class="alert alert-warning mb-0 text-center" role="alert">
        No production days found.
    </div>
<% end %>