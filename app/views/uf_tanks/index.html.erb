<div class="container">

    <% if notice.present? %>
        <br>
        <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <br>

</div>

<div class="container">

    <div class="row align-middle">
        <div class="col text-start">
            <h1>UF Tank Analysis</h1>
        </div>
        <div class="col text-end">
            <%= link_to " New ", new_uf_tank_path, type: 'button', class: 'bi bi-plus-circle-fill btn btn-outline-primary btn-sm rounded-pill p-2' %>
        </div>
    </div>
    <br>
    <table style="overflow: hidden" class="table rounded-3">
        <thead>
            <tr>
                <th scope="col" class="align-middle">Date</th>
                <th scope="col" class="align-middle">Density</th>
                <th scope="col" class="align-middle">pH</th>
                <th scope="col" class="align-middle">Viscosity</th>
                <th scope="col" class="align-middle">Gel Time</th>
                <th scope="col" class="align-middle">%Solid</th>
                <th scope="col" class="align-middle"></th>
            </tr>
        </thead>

        <tbody>

            <% if @uf_tanks.any? %>
                <% @uf_tanks.each do |uf_tanks| %>
                    <tr style="cursor:pointer;">
                        <td class="align-middle"><%= uf_tanks.date.to_s.gsub("-","/") %></td>
                        <td class="align-middle"><%= uf_tanks.density %></td>
                        <td class="align-middle"><%= uf_tanks.ph %></td>
                        <td class="align-middle"><%= uf_tanks.viscosity %></td>
                        <td class="align-middle"><%= uf_tanks.reaction_time %></td>
                        <td class="align-middle"><%= uf_tanks.solid_content %></td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-center align-items-center">
                                <%= link_to '', edit_uf_tank_url(uf_tanks), class: "btn btn-outline-primary btn-sm bi bi-pencil-square m-1 rounded-pill " %>
                                <%= link_to '', uf_tanks_path(uf_tanks), class: "btn btn-outline-primary btn-sm bi bi-eye-fill m-1 rounded-pill" %>
                            </div>
                        </td>
                    </tr>
                <% end %>
            <% end %>

        </tbody>


        <% unless @uf_tanks.any? %>
            <tfoot>

                <tr>
                    <td colspan="4">
                        <div class="alert alert-warning mb-0 text-center" role="alert">
                            No UF Test found.
                        </div>
                    </td>
                </tr>
            </tfoot>

        <% end %>
    </table>
</div>

