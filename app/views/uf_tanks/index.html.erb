<div class="container">

    <div class="row mb-3">
        <div class="col-md-6">
            <h3>UF Tank Analysis</h3>
        </div>
        <div class="col-md-6 text-end">
            <%= link_to new_uf_tank_path, class: 'btn btn-primary px-3 py-2' do %>
                <div class="bi bi-plus"></div>
            <% end %>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <% if @uf_tanks.any? %>
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th scope="col" class="align-middle">Date</th>
                            <th scope="col" class="align-middle">Density</th>
                            <th scope="col" class="align-middle">pH</th>
                            <th scope="col" class="align-middle">Viscosity</th>
                            <th scope="col" class="align-middle">Gel Time</th>
                            <th scope="col" class="align-middle">% Solid</th>
                            <th scope="col" class="align-middle text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @uf_tanks.each do |tank| %>
                            <tr>
                                <td class="align-middle"><%= tank.date %></td>
                                <td class="align-middle"><%= tank.density %></td>
                                <td class="align-middle"><%= tank.ph %></td>
                                <td class="align-middle"><%= tank.viscosity %></td>
                                <td class="align-middle"><%= tank.reaction_time %></td>
                                <td class="align-middle"><%= tank.solid_content %></td>
                                <td class="align-middle">
                                    <div class="btn-group d-flex" role="group" aria-label="UF Tank actions">
                                        <%= link_to edit_uf_tank_path(tank), class: "btn btn-primary btn-sm rounded-pill me-2" do %>
                                            <i class="bi bi-pencil-square"></i>
                                        <% end %>
                                        <%= link_to uf_tank_path(tank), class: "btn btn-primary btn-sm rounded-pill" do %>
                                            <i class="bi bi-eye-fill"></i>
                                        <% end %>
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                    <tfoot>
                        <% unless @uf_tanks.any? %>
                            <tr>
                                <td colspan="7">
                                    <div class="alert alert-warning mb-0 text-center" role="alert">
                                        No UF Tanks found.
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    </tfoot>
                </table>
            <% else %>
                <div class="alert alert-warning mb-0 text-center" role="alert">
                    No UF Tanks found.
                </div>
            <% end %>
        </div>
    </div>

</div>
