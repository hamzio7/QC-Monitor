<div class="container">
    <% if notice.present? %>
        <div class="alert alert-success mb-3">
            <%= notice %>
        </div>
    <% end %>
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">UF Tank Analysis</h4>
        </div>
        <div class="card-body">
            <dl class="row">

                <div class="col">
                    <dt class="col">Date:</dt>
                    <dd class="col"><%= uf_tank.date %></dd>

                    <dt class="col">Shift:</dt>
                    <dd class="col"><%= uf_tank.shift %></dd>

                    <dt class="col">Initial Temp:</dt>
                    <dd class="col"><%= uf_tank.initial_temp %> Â°C</dd>

                    <dt class="col">Tank Number:</dt>
                    <dd class="col"><%= uf_tank.tank_number %></dd>

                    <dt class="col">Gel Time:</dt>
                    <dd class="col"><%= uf_tank.reaction_time %> s</dd>

                </div>

                <div class="col tex">

                    <dt class="col">Time:</dt>

                    <dd class="col"><%= uf_tank.time %></dd>

                    <dt class="col">pH:</dt>
                    <dd class="col"><%= uf_tank.ph %></dd>

                    <dt class="col">Viscosity:</dt>
                    <dd class="col"><%= uf_tank.viscosity %> s</dd>

                    <dt class="col">Density:</dt>
                    <dd class="col"><%= uf_tank.density %> gr/ml</dd>

                    <dt class="col">Solid Content:</dt>
                    <dd class="col">% <%= uf_tank.solid_content %></dd>
                </div>


            </dl>
        </div>
    </div>
</div>
