<div class="container">

    <div class="row">
        <div class="col text-start">
            <%= link_to "", pallets_path, class: " btn btn-sm btn-outline-primary btn-sm bi bi-arrow-left-short" %>
        </div>

        <div class="col text-end">
            <div class="dropdown">
                <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"></button>
                <ul class="dropdown-menu">
                    <li>
                        <%= link_to 'Edit', edit_pallet_path(@pallet), class: "icon-link bi bi-pencil-square dropdown-item" %>
                    </li>

                    <li data-bs-toggle="modal" data-bs-target="#exampleModal" class="icon-link bi bi-trash dropdown-item">
                        Delete
                    </li>
                </ul>
            </div>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        Are you sure you want to delete this item?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <%= button_to 'Delete', @pallet, method: :delete, class: "btn btn-danger" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">

    <% if notice.present? %>
        <br>
        <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <br>

</div>

<%= render @pallet %>

<br>
