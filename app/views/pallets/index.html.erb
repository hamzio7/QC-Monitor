<div class="container">

    <div class="row mb-3 d-flex justify-content-center align-items-center">
        <div class="col-6">
            <h3>Pallets</h3>
        </div>

        <%= render 'add_new_button' %>

    </div>

    <%= render 'searchbar' %>

    <% if @pallets.any? %>

        <% @pallets.each do |pallet| %>
            <div class="row">
                <div class="col">
                    <%= render partial: "pallets/pallet_view", locals: { pallet: pallet } %>
                </div>
            </div>

        <% end %>

    <% else %>
        <div class="alert alert-warning mb-0 text-center" role="alert">
            No pallets found.
        </div>
    <% end %>

</div>
