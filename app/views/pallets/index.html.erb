<div class="container">

    <div class="row mb-3">
        <div class="col-md-6">
            <h3>Pallets</h3>
        </div>
        <div class="col-md-6 text-end d-flex justify-content-end">
            <%= link_to new_pallet_path, class: 'circled-btn btn btn-dark d-flex justify-content-center align-items-center rounded-circle' do %>
                <div class="bi bi-plus"></div>
            <% end %>
        </div>

    </div>

    <div class="w-100 mb-2">
        <form action="/pallets" method="get" class="d-flex align-items-center form-control rounded-pill p-0">
            <label class="w-100">
                <input type="search" name="query" class="bg-transparent  w-100 h-100 focus-ring rounded-pill border-0 ms-2 me-4" placeholder="Search..." aria-label="Search">
            </label>

            <button type="submit" class="btn rounded-pill w-auto border-0 ms-2 me-1">
                <i class="bi bi-search"></i>
            </button>

        </form>
    </div>

    <div class="card  rounded-4  overflow-hidden">
        <div class="card-body table-responsive p-0">
            <% if @pallets.any? %>
                <table class="table table-hover table-borderless m-0">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col" class="align-middle text-center">Date</th>
                            <th scope="col" class="align-middle text-center">Pallet Num.</th>
                            <th scope="col" class="align-middle text-center">Color Num.</th>
                            <th scope="col" class="align-middle text-center">Customer</th>
                            <th scope="col" class="align-middle text-center">Status</th>
                            <th scope="col" class="align-middle text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @pallets.each do |pallet| %>

                            <% is_pallet_stopped = pallet.status.downcase.include?("stop")
                               button_type = (is_pallet_stopped ? " btn-danger" : " btn-success")
                            %>

                            <tr class=" <%= is_pallet_stopped ? "table-danger" : "table-success" %>">
                                <td class="align-middle text-center "><%= pallet.production_date %></td>
                                <td class="align-middle text-center "><%= pallet.pallet_number %></td>
                                <td class="align-middle text-center "><%= pallet.color_number %></td>
                                <td class="align-middle text-center "><%= pallet.customer %></td>
                                <td class="align-middle text-center <%= is_pallet_stopped ? "text-danger" : "text-success" %>"><%= pallet.status %></td>
                                <td class="align-middle">
                                    <div class="btn-group d-flex" role="group" aria-label="Pallet actions">
                                        <%= link_to pallet_path(pallet), class: "btn " + button_type + "  btn-sm rounded-pill me-2" do %>
                                            <i class="bi bi-eye-fill"></i>
                                        <% end %>
                                        <%= link_to edit_pallet_path(pallet), class: "btn " + button_type + " btn-sm rounded-pill me-2" do %>
                                            <i class="bi bi-pencil-square"></i>
                                        <% end %>
                                        <%= link_to print_pallet_path(pallet), class: "btn " + button_type + " btn-sm rounded-pill", data: { action: "print-pallet", url: print_pallet_path(pallet) } do %>
                                            <i class="bi bi-printer-fill"></i>
                                        <% end %>
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                    <tfoot>
                        <% unless @pallets.any? %>
                            <tr>
                                <td colspan="5">
                                    <div class="alert alert-warning mb-0 text-center" role="alert">
                                        No pallets found.
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    </tfoot>
                </table>
            <% else %>
                <div class="alert alert-warning mb-0 text-center" role="alert">
                    No pallets found.
                </div>
            <% end %>
        </div>


    </div>

</div>
