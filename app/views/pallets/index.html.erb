<div class="container">

    <% if notice.present? %>
        <div class="alert alert-success mb-3">
            <%= notice %>
        </div>
    <% end %>

    <div class="row mb-3">
        <div class="col-md-6">
            <h3>Pallets</h3>
        </div>
        <div class="col-md-6 text-end">
            <%= link_to new_pallet_path, class: 'btn btn-primary px-3 py-2' do %>
                <div class="bi bi-plus">New</div>
            <% end %>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <% if @pallets.any? %>
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th scope="col" class="align-middle">Pallet Num.</th>
                            <th scope="col" class="align-middle">Color Num.</th>
                            <th scope="col" class="align-middle">Customer</th>
                            <th scope="col" class="align-middle">Status</th>
                            <th scope="col" class="align-middle text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @pallets.each do |pallet| %>
                            <tr>
                                <td class="align-middle"><%= pallet.pallet_number %></td>
                                <td class="align-middle"><%= pallet.color_number %></td>
                                <td class="align-middle"><%= pallet.customer %></td>
                                <td class="align-middle"><%= pallet.status %></td>
                                <td class="align-middle">
                                    <div class="btn-group d-flex" role="group" aria-label="Pallet actions">
                                        <%= link_to pallet_path(pallet), class: "btn btn-primary btn-sm rounded-pill me-2" do %>
                                            <i class="bi bi-eye-fill"></i>
                                        <% end %>
                                        <%= link_to edit_pallet_path(pallet), class: "btn btn-primary btn-sm rounded-pill me-2" do %>
                                            <i class="bi bi-pencil-square"></i>
                                        <% end %>
                                        <%= link_to print_pallet_path(pallet), class: "btn btn-primary btn-sm rounded-pill", target: "_blank" do %>
                                            <i class="bi bi-printer"></i>
                                        <% end %>
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                    <tfoot>
                        <% unless @pallets.any? %>
                            <tr>
                                <td colspan="5">
                                    <div class="alert alert-warning mb-0 text-center" role="alert">
                                        No pallets found.
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    </tfoot>
                </table>
            <% else %>
                <div class="alert alert-warning mb-0 text-center" role="alert">
                    No pallets found.
                </div>
            <% end %>
        </div>
    </div>

</div>
