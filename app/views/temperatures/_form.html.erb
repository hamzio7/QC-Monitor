<%= form_with(model: temperature, class: "container mt-4") do |form| %>
    <% if temperature.errors.any? %>
        <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(temperature.errors.count, "error") %> prohibited this temperature
                from being saved:</h4>
            <ul>
                <% temperature.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row mb-3">
        <div class="col-md-6">
            <%= form.label :uf, class: "form-label text-uppercase" %>
            <%= form.text_field :uf, class: "form-control" %>
        </div>
        <div class="col-md-6">
            <%= form.label :mf, class: "form-label text-uppercase" %>
            <%= form.text_field :mf, class: "form-control" %>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <%= form.label :mf_paper, class: "form-label text-uppercase" %>
            <%= form.text_field :mf_paper, class: "form-control" %>
        </div>
        <div class="col-md-6">
            <%= form.label "Production Room Paper", class: "form-label text-uppercase" %>
            <%= form.text_field :pr_paper, class: "form-control" %>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <%= form.label :chiller, class: "form-label text-uppercase" %>
            <%= form.text_field :chiller, class: "form-control" %>
        </div>
        <div class="col-md-3">
            <%= form.label :date, class: "form-label text-uppercase" %>
            <%= form.text_field :date, value: if params[:date].present?
                                                Date.parse(params[:date]).to_parsi
                                              else
                                                @temperature.new_record? ? Date.today.to_parsi : Date.parse(@temperature.date).to_parsi
                                              end, class: "form-control text-md-center", required: false %>
        </div>
        <div class="col-md-3">
            <%= form.label :time, class: "form-label text-uppercase" %>
            <%= form.text_field :time, value: if params[:time].present?
                                                Time.parse(params[:time].to_s).strftime("%H:%M")
                                              else
                                                @temperature.new_record? ? Time.now.strftime("%H:%M") : @temperature.time.strftime("%H:%M")
                                              end, class: "form-control text-md-center", required: false %>
        </div>

        <div class="col-md-6">
            <%= form.label :line_number, class: "form-label" %>
            <%= form.select :line_number, options_for_select(lines, @temperature.line_number.present? ? @temperature.line_number : params[:line_number]), { prompt: :line_number }, class: "form-control text-md-center", required: false %>
        </div>
    </div>

    <div class="mt-3">
        <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
<% end %>
