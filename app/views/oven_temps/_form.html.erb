<%= form_with(model: oven_temp) do |form| %>
  <% if oven_temp.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(oven_temp.errors.count, "error") %> prohibited this oven_temp from being saved:</h2>

      <ul>
        <% oven_temp.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :oven_number, style: "display: block" %>
    <%= form.number_field :oven_number %>
  </div>

  <div>
    <%= form.label :temperature, style: "display: block" %>
    <%= form.text_field :temperature %>
  </div>

    <div class="col-md-2">
        <%= form.label :date, class: "form-label" %>
        <%= form.text_field :date, value: if params[:date].present?
                                            Date.parse(params[:date]).to_parsi
                                          else
                                            @oven_temp.new_record? ? Date.today.to_parsi : Date.parse(@oven_temp.date).to_parsi
                                          end, class: "form-control text-md-center", required: false %>
    </div>

    <div class="col-md-2">
        <%= form.label :time, class: "form-label" %>
        <%= form.text_field :time, value: if params[:time].present?
                                            Time.parse(params[:time].to_s).strftime("%H:%M")
                                          else
                                            @oven_temp.new_record? ? Time.now.strftime("%H:%M") : @oven_temp.time.strftime("%H:%M")
                                          end, class: "form-control text-md-center", required: false %>
    </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
